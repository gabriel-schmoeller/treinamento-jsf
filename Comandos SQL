CREATE TABLE CLIENTES(
  ID INTEGER NOT NULL PRIMARY KEY,
  NOME VARCHAR2(100) NOT NULL,
  CPF VARCHAR2(11) NOT NULL,
  TELEFONE VARCHAR2(18) NOT NULL,
  EMAIL VARCHAR(100));

CREATE TABLE LIVROS(
  ID INTEGER NOT NULL PRIMARY KEY,
  NOME VARCHAR2(30) NOT NULL,
  GENERO VARCHAR2(20) NOT NULL,
  RESUMO VARCHAR(500) NOT NULL,
  DATA_PUBLICACAO DATE NOT NULL);

CREATE TABLE EMPRESTIMOS(
  ID INTEGER NOT NULL,
  LIVROS_ID INTEGER NOT NULL,
  CLIENTES_ID INTEGER NOT NULL,
  DATA_EMPRESTIMO TIMESTAMP NOT NULL,
  PRIMARY KEY (ID),
  CONSTRAINT FK_LIVRO_ID FOREIGN KEY (LIVROS_ID) REFERENCES LIVROS(ID),
  CONSTRAINT FK_CLIENTE_ID FOREIGN KEY (CLIENTES_ID) REFERENCES CLIENTES(ID));

CREATE SEQUENCE SEQ_ID_CLIENTES
INCREMENT BY 1
START WITH 1
NOCYCLE
NOCACHE;

CREATE SEQUENCE SEQ_ID_LIVROS
INCREMENT BY 1
START WITH 1
NOCYCLE
NOCACHE;

CREATE SEQUENCE SEQ_ID_EMPRESTIMOS
INCREMENT BY 1
START WITH 1
NOCYCLE
NOCACHE;



